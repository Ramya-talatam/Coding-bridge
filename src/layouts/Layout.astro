---
interface Props {
  title: string;
}

const { title } = Astro.props;
import { Image } from "astro:assets";
import img from "../assets/Images/details.png";

import { Content } from "../components/content.md";
import calendar from "../assets/Images/calendar.png";
import sessions from "../assets/Images/sessions.png";
import clock from "../assets/Images/clock.png";
import rupee from "../assets/Images/rupee.png";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter+Tight:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-black h-screen">
    <div
      class="rounded m-8 md:m-14 h-4/5 md:h-3/6 bg-zinc-900 border border-4 border-zinc-800"
    >
      <div class="flex flex-col md:flex-row m-6 h-[315px]">
        <div class="w-full md:w-3/4 md:p-6">
          <h1
            class="text-2xl align-center md:text-6xl font-bold text-white md:tracking-wide font-inter"
          >
            Coding Bridge Course
          </h1>
          <br />
          <Content />
          <br />
        </div>
        <div class="w-full md:w-1/4 h-full">
          <!-- <Image src={img} alt="details" class="h-full" /> -->
          <Image src={img} alt="details" class="h-full" />
        </div>
      </div>
    </div>
    <div class="m-8 md:m-14 flex flex-col md:flex-row space-y-4 items-center md:space-x-4">
      <div
        class="mt-4 flex justify-center border border-4 border-zinc-800 flex-col items-center space-y-0.5 h-24 w-56 md:w-48"
      >
        <div class="flex flex-row space-x-1.5 items-center">
          <Image src={calendar} alt="calender" class="h-8 w-8" />
          <p class="text-white italic">21 Days</p>
        </div>
        <p class="text-white text-sm font-bold">May 20-Jun 8</p>
      </div>
      <div
        class="flex justify-center  border border-4 border-zinc-800 h-24 w-56 md:w-48"
      >
        <div class="flex flex-row space-x-1.5 items-center">
          <Image src={sessions} alt="calender" class="h-8 w-8" />
          <p class="text-white font-bold">36 Sessions</p>
        </div>
      </div>
      <div class="flex justify-center  border border-4 border-zinc-800 h-24 w-56 md:w-48">
        <div class="flex flex-row space-x-2 items-center">
          <Image src={clock} alt="clock" class="h-6 w-6" />
          <div class="flex flex-col space-y-2">
            <p class="text-white font-bold italic text-xs">9.00AM-10.30AM</p>
            <p class="text-white font-bold italic text-xs">8.00PM-9.30PM</p>
          </div>
        </div>
      </div>
      <div
        class="flex justify-center border border-4 border-zinc-800 h-24 w-56 md:w-48"
      >
        <div class="flex flex-row space-x-3 items-center">
          <Image src={rupee} alt="calender" class="h-6 w-6" />
          <p class="text-white font-bold">2999 INR</p>
        </div>
      </div>
    </div>
    <div class="border border-4 border-zinc-800 mx-14"></div>
        <nav class = "mt-4 md:space-x-14 flex flex-col md:flex-row">
            <button class="text-white hover:bg-red-600 p-2 rounded-md md:ml-12" onclick="location.href='/Coding-bridge/'">Course Content</button>
            <button class="text-white hover:bg-red-600 p-2 rounded-md" onclick="location.href='/Coding-bridge/audience'">Course Audience</button>
            <button class="text-white hover:bg-red-600 p-2 rounded-md" onclick="location.href='/Coding-bridge/takeaways'">Course Takeaways</button>
            <button class="text-white hover:bg-red-600 p-2 rounded-md" onclick="location.href='/Coding-bridge/trainer'">Trainer Profile</button>
            <button class="text-white hover:bg-red-600 p-2 rounded-md" onclick="location.href='/Coding-bridge/pricing-page'">Pricing</button>
            <button class="text-white hover:bg-red-600 p-2 rounded-md" onclick="location.href='/Coding-bridge/schedule'">Schedule</button>
            <button class="text-white hover:bg-red-600 p-2 rounded-md" onclick="location.href='/Coding-bridge/incentives'">Incentives For All</button>
        </nav>
		<slot />
    </div>
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  main {
    padding: 50px;
  }
</style>
